{
  "manifest_version": 2,
  "name": "XMR.TO Lens",
  "description": "Send Monero to a Bitcoin address using XMR.TO",
  "version": "1.0",
  "background": {
    "scripts": [ "background.js" ]
  },
  "content_scripts": [ {
    "css": [ "jquery-ui.min.css", "xmrto-lens.css" ],
    "js": [ "jquery-2.1.1.min.js", "jquery-ui.min.js", "jquery.dd.min.js", "qrcode.js", "xmrto-lens.js" ],
    "matches": [ "\u003Call_urls>" ]
  } ],
  "icons": {
     "128": "128x128_1.png"
  },
  "page_action": {
     "default_icon": {
        "19": "19x19_1.png",
        "38": "38x38_1.png"
     },
     "default_title": "XMR.TO Lens has found Bitcoin addresses on this page."
  },
  "permissions": [ "https://xmr.to/" ],
  "web_accessible_resources": [ "*.gif", "images/*", "*.png" ]
}
